<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetectActivity">
    <ImageView
        android:background="#4CAF50"
        android:scaleType="fitCenter"
        android:id="@+id/image_view_detect"
        android:layout_width="match_parent"
        android:layout_height="400dp">

    </ImageView>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_speak"
            android:padding="5dp"
            android:background="@drawable/btn_volume"
            android:layout_width="50dp"
            android:layout_height="50dp">

        </Button>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_english"
                android:textSize="26sp"
                android:layout_marginLeft="5dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/tv_mean"
                android:layout_marginTop="5dp"
                android:textSize="26sp"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_save_result"
            android:layout_gravity="center"
            android:background="@drawable/ic_baseline_save_24"
            android:layout_width="50dp"
            android:layout_height="50dp">
        </Button>
        <TextView
            android:layout_gravity="center"
            android:text="Save"
            android:textSize="28sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>



</LinearLayout>